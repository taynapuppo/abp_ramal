@section content_toolbar {
    <abp-button id="ExportToExcelButton" text="@L["ExportToExcel"].Value" icon="download" size="Small" button-type="Primary" />
    @if (await Authorization.IsGrantedAsync(SistemaRamaisPermissions.Ramais.Create))
    {
        <abp-button id="NewRamalButton" text="@L["NewRamal"].Value" icon="plus" size="Small" button-type="Primary" />
    }
