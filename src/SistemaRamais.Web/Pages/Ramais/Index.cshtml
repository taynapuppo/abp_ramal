@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using SistemaRamais.Permissions
@using SistemaRamais.Web.Pages.Ramais
@using SistemaRamais.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using SistemaRamais.Localization
@inject IHtmlLocalizer<SistemaRamaisResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Ramais"].Value;
    PageLayout.Content.MenuItemName = SistemaRamaisMenus.Ramais;
}

@section styles
{
